LOG_LEVEL=INFO

# Behavior
SPOT_PREFERENCE=BEST_EFFORT  # or STRICT
WEBHOOK_TIMEOUT_SECONDS=5
DEFAULT_SPOT_RATIO=0.5

# Labels / Annotations
CAPACITY_TYPE_LABEL=karpenter.sh/capacity-type
# Preferred generic label for workload role (legacy: SPARK_ROLE_LABEL)
WORKLOAD_ROLE_LABEL=spark-role
DRIVER_ROLE_VALUE=driver
EXECUTOR_ROLE_VALUE=executor
JOB_ID_LABEL=emr-containers.amazonaws.com/job.id
SPOT_RATIO_ANNOTATION=workload/spot-ratio  # Label that is set during job submission

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_DEFAULT_TTL_SECONDS=86400
APP_ENV=production
RECONCILE_ENABLED=true
RECONCILE_INTERVAL_SECONDS=1800

